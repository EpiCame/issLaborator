<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.Theater" table="teatre" schema="iss">
        <id name="name">
            <column name="nume" sql-type="varchar(50)"/>
        </id>
        <property name="address">
            <column name="adresa" sql-type="varchar(50)"/>
        </property>
    </class>
</hibernate-mapping>